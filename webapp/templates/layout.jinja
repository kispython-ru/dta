<!doctype html>
<html>
<head>
  <title>Цифровой ассистент преподавателя</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
  <meta name="theme-color" content="#ffffff"/>
  <link rel="icon" href="{{ url_for('static', filename='logo.svg') }}"/>
  <link rel="stylesheet"
        href="{{ url_for('static', filename='css/bootstrap.min.css') }}"/>
  {% if request.endpoint == 'views.task' and highlight_syntax %}
  <link rel="stylesheet" href="{{ url_for('static', filename='css/codemirror.min.css') }}">
  {% endif %}
  <style>
  .logo {
    width: 44px;
    height: 44px;
    position: absolute;
    top: -28px;
    background-color: white;
    border-radius: 22px;
    border: solid 1px #9ca9b5;
  }
  .logo-img {
    width: 28px;
    height: 28px;
    margin-left: 7px;
    margin-top: 8px;
  }
  .logo-container {
    width: 24px;
    position: relative;
    margin-right: 30px;
    display: inline-block;
  }
  </style>
</head>
<body>
{% block content %}{% endblock %}
</body>
</html>
