{% extends 'layout.jinja' %}
{% block content %}
<div class="container">
  <div class="card w-50 m-auto mt-5">
    <div class="card-body">
      <h5 class="card-title">Ой, ошибка!</h5>
      <h6 class="card-subtitle mb-2 text-muted">
        {{ error_message }} Код ошибки: {{ error_code }}
      </h6>
      <a class="btn btn-primary w-50 d-block" href="{{ error_redirect }}">
        Попробовать снова
      </a>
    </div>
  </div>
</div>
{% endblock %}
