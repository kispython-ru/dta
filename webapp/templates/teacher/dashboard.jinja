{% extends 'layout.jinja' %}
{% block content %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse container">
    <ol class="breadcrumb bg-light pt-2 pb-2 m-0">
      <li>
        <a class="logo-container text-decoration-none" href="/admin">
          <div class="logo">
            <img class="logo-img" src="{{ url_for('static', filename='logo.svg') }}" />
          </div>
        </a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        Преподавательская
      </li>
    </ol>
    <a class="breadcrumb-item text-decoration-none" href="/admin/logout">
      Выйти
    </a>
  </div>
</nav>
<div class="d-flex flex-row container mt-3">
  <form action="/admin/group/select" method="GET" class="w-100">
    <select class="form-select mb-2" name="group">
      {% for group in groups %}
        <option value="{{ group.id }}">
          {{ group.title }}
        </option>
      {% endfor %} 
    </select>
    <button type="submit" class="btn btn-outline-primary w-100 d-block">
      Далее
    </button>
  </form>
</div>
{% endblock %}