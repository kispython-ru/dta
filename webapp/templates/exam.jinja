{% extends 'layout.jinja' %}
{% block content %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="collapse navbar-collapse container">
    <ol class="breadcrumb bg-light pt-2 pb-2 m-0">
      <li>
        <div class="logo-container">
          <div class="logo">
            <img class="logo-img" src="{{ url_for('static', filename='logo.svg') }}" />
          </div>
        </div>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        Цифровой ассистент преподавателя
      </li>
    </ol>
  </div>
</nav>
<div style="margin-left:16%; margin-top:3%;" class="d-flex flex-row">
  <div>
        {% if seed == None %}
            <form action="/exams/{{  group.id  }}" method="post" >
                <label style="display:block;" class="mx-auto mb-2 breadcrumb-item active">Зачёт для группы {{  group.title  }}</label>
                <button class="btn btn-outline-primary mx-auto mb-2" style="display:block;" type="submit" href="/exam/{{  group.id  }}/start">Начать</button>
            </form>
        {% elif seed.active == false %}
                <form action="#" method="post" >
                    <label style="display:block;" class="mx-auto mb-2 breadcrumb-item active">Зачёт для группы {{  group.title  }}</label>
                    <button class="btn btn-outline-primary mx-auto mb-2" style="display:block;" type="submit" href="#">Получить результаты</button>
                </form>
        {% else %}
                <form action="/exams/{{ group.id }}" method="post" >
                    <label style="display:block;" class="mx-auto mb-2 breadcrumb-item active">Зачёт для группы {{  group.title  }}</label>
                    <button class="btn btn-outline-primary mx-auto mb-2" style="display:block;" type="submit" href="/exam/{{  group.id  }}/end">Завершить</button>
                </form>          
        {% endif %}    
    </form>
  <div>  
</div>
{% endblock %}